<Window
    x:Class="UD03_Ejercicio04.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:UD03_Ejercicio04"
    mc:Ignorable="d"
    Title="Visor de imágenes"
    Height="650"
    Width="800"
    MinWidth="500"
    MinHeight="500"
    Icon="/imagen.ico">
    <Window.Resources>
        <Style
            TargetType="Image">
            <Setter
                Property="Width"
                Value="150" />
        </Style>
        <Style
            TargetType="TextBlock">
            <Setter
                Property="FontFamily"
                Value="Rubik" />
            <Setter
                Property="VerticalAlignment"
                Value="Center" />
        </Style>
        <Style
            TargetType="Button">
            <Setter
                Property="Margin"
                Value="5" />
        </Style>
    </Window.Resources>
    <DockPanel
        LastChildFill="True">
        <DockPanel
            DockPanel.Dock="Bottom"
            Height="70"
            Background="LightBlue"
            Margin="15"
            LastChildFill="False">

            <TextBlock
                DockPanel.Dock="Left"
                Text="Nº de imágenes: 10"
                FontSize="20"
                Margin="8"/>

            <TextBlock
                DockPanel.Dock="Right"
                Text="Diseñado por Francisco Gil"
                FontSize="20"
                Margin="8" />
        </DockPanel>
        <Border
            DockPanel.Dock="Right"
            Margin="15,15,15,0"
            BorderBrush="Black"
            BorderThickness="3"
            CornerRadius="3">
            <DockPanel
                Width="100"
                Background="LightGreen"
                LastChildFill="False">
                <Button
                    Content="Eliminar imagen" 
                    DockPanel.Dock="Top"/>
                <Button
                    Content="Añadir imagen"
                    DockPanel.Dock="Top" />
                <Button
                    Content="Eliminar todas"
                    DockPanel.Dock="Top" />
                <Button
                    Content="Recortar"
                    DockPanel.Dock="Bottom" />
                <Button
                    Content="Rotar"
                    DockPanel.Dock="Bottom" />
            </DockPanel>
        </Border>
        <TextBlock
            Text="Visor de imágenes"
            DockPanel.Dock="Top"
            FontSize="40"
            TextAlignment="Center"/>

        <WrapPanel>
            <Image
                Source="episodioIV.jpg"/>
            <Image
                Source="episodioIV.jpg" />
            <Image
                Source="episodioIV.jpg" />
            <Image
                Source="episodioIV.jpg" />
            <Image
                Source="episodioIV.jpg" />
            <Image
                Source="episodioIV.jpg" />
            <Image
                Source="episodioIV.jpg" />
            <Image
                Source="episodioIV.jpg" />
        </WrapPanel>


    </DockPanel>
</Window>
